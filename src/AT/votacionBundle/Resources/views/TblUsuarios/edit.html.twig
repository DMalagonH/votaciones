{% extends '::base.html.twig' %}

{% block style %}
    <style>
        .input-large{
            width: 100%;
        }
        .td-label{
            width:190px;
            vertical-align: top;
            padding-top: 3px;
        }
    </style>
{% endblock style %}

{% block menu %}
    {% include '::menu_admin.html.twig' %}
{% endblock menu %}

{% block body %}
    <div class="row">
        <div class="span3">	</div>				  
        <div class="span6">					  
            <h3 class="short" style="margin-bottom: 0px;"><strong>Editar usuario</strong></h3>
            <br/>

            <form action="{{ path('usuarios_edit', {id : entity.id }) }}" method='POST' {{ form_enctype(edit_form) }} id="contactForm" type="post">
                {{ form_widget(edit_form._token) }}
                {{ form_errors(edit_form) }}
                (*) Campos obligatorios<br/><br/>
                <table border="0" style="width:100%;">
                    <tr>
                        <td class="td-label">Nombres * </td>
                        <td>{{ form_widget(edit_form.nombre, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td class="td-label">Apellidos *</td>
                        <td>{{ form_widget(edit_form.apellido, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td class="td-label">Móvil *</td>
                        <td>{{ form_widget(edit_form.celular, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td class="td-label">Teléfono</td>
                        <td>{{ form_widget(edit_form.telefono, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td class="td-label">Profesión</td>
                        <td>{{ form_widget(edit_form.profesion, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td class="td-label">Rol</td>
                        <td>{{ form_widget(edit_form.rol, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    {#
                    <tr>
                        <td class="td-label">Correo electrónico *</td>
                        <td>{{ form_widget(edit_form.email, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td class="td-label">Cédula *</td>
                        <td>{{ form_widget(edit_form.doc, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    
                    #}
                    <tr>
                        <td class="td-label">Activado</td>
                        <td>{{ form_widget(edit_form.usuarioActivado, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>

                    <tr>
                        <td class="td-label">Acceso usuarios</td>
                        <td>{{ form_widget(edit_form.permisoNuevosUsuarios, {'attr':{'class':'input-large'} }) }}</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: right;">
                            <a class="btn btn-large" href="{{ path('usuarios') }}">Volver a la lista</a>
                            <input type="submit" class="btn btn-primary btn-large" value="Guardar"/>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
{% endblock %}
